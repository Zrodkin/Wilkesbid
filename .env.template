# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================
# Get these from: https://supabase.com/dashboard/project/YOUR-PROJECT/settings/api

NEXT_PUBLIC_SUPABASE_URL=https://YOUR-PROJECT-REF.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================================================
# AUTHENTICATION
# ============================================================================
# Generate JWT_SECRET: openssl rand -base64 32
# Set a secure admin password

JWT_SECRET=your-jwt-secret-here
ADMIN_PASSWORD=your-secure-admin-password

# ============================================================================
# EMAIL CONFIGURATION (Resend)
# ============================================================================
# Get API key from: https://resend.com/api-keys
# Set your verified sending domain

RESEND_API_KEY=re_your-api-key-here
EMAIL_FROM=noreply@yourdomain.com

# ============================================================================
# STRIPE CONFIGURATION
# ============================================================================
# Get these from: https://dashboard.stripe.com/apikeys

STRIPE_SECRET_KEY=sk_test_your-secret-key-here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key-here

# Stripe Webhook Secret (after setting up webhook)
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# Stripe Connect (from: https://dashboard.stripe.com/settings/applications)
STRIPE_CLIENT_ID=ca_your-client-id-here

# ============================================================================
# SITE CONFIGURATION
# ============================================================================
# Update after deploying to Vercel

NEXT_PUBLIC_SITE_URL=http://localhost:3000
SITE_URL=http://localhost:3000

# ============================================================================
# NOTES
# ============================================================================
# 
# 1. JWT_SECRET: Must be a random string. Generate with:
#    openssl rand -base64 32
#
# 2. ADMIN_PASSWORD: Choose a strong password for admin access
#
# 3. Stripe: Use test keys for development (sk_test_..., pk_test_...)
#    Use live keys for production (sk_live_..., pk_live_...)
#
# 4. Email: Must verify your sending domain in Resend
#
# 5. After deploying to Vercel, update SITE_URL with your production URL
#